@model List<AnnouncementViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
}
<div class="container-fluid mt-4">
    <h3>Duyurular</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Başlık</th>
                <th scope="col">Duyuru Tipi</th>
                <th scope="col">Tarih</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
              <tr>
                <th scope="row">@item.ID</th>
                <td>@item.Title</td>
                <td>@item.TypeID</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>
                        <a asp-action="AnnouncementDetails" asp-controller="Announcement" asp-area="Admin" asp-route-id="@item.ID" class="btn btn-primary">Detay</a>
                 </td>
            </tr>  
            }
             
       </tbody>
    </table>
    <br>
    <div class="mt-4">
        <a class="btn btn-success" href="/Admin/Announcement/AddAnnouncement/">Yeni Duyuru Oluştur</a>
    </div>
</div>


@model AnnouncementViewModel

@{
    ViewData["Title"] = "AnnouncementDetails";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
}

<h1>Duyuru Detayları</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Başlık:
        </dt>
        <dd class="col-sm-10">
            <input type="text" class="form-control" value="@Model.Title" readonly />
        </dd>
        <dt class="col-sm-2">
            İçerik:
        </dt>
        <dd class="col-sm-10">
            <textarea class="form-control" rows="4" readonly>@Model.Content</textarea>
        </dd>
        <dt class="col-sm-2">
            Tarih:
        </dt>
        <dd class="col-sm-10">
            <input type="text" class="form-control" value="@Model.Date.ToShortDateString()" readonly />
        </dd>
        <dt class="col-sm-2">
            Tip Numarası:
        </dt>
        <dd class="col-sm-10">
            <input type="text" class="form-control" value="@Model.TypeID" readonly />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>